<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}

            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
            <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>            {{ encore_entry_link_tags('app') }}

            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_home') }}">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_room') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item me-3 ms-3">
                            <a class="nav-link btn " href="{{ path('app_logout') }}"><strong>LOGOUT</strong></a>
                        </li>
                        <a href="{{ path('app_profile') }}" class=" btn btn-secondary text-decoration-none text-dark text-capitalize ">{{ app.user.username }}</a>

                    {% else %}


                        <li class="nav-item me-3 ms-3">
                            <a class="nav-link btn " href="{{ path('app_register') }}"><strong>REGISTER</strong></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link btn " href="{{ path('app_login') }}"><strong>LOGIN</strong></a>
                        </li>

                    {% endif %}
                    {% if app.user %}

                    {% if "ROLE_ADMIN" in app.user.roles %}


                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('create_room') }}">create</a>
                        </li>

                    {% endif %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
            <div class="container">

                {% block body %}{% endblock %}
            </div>



    </body>
</html>
